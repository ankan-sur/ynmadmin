{
  "name": "@manufac/repeater",
  "version": "4.0.6",
  "description": "The missing constructor function for creating safe async iterators",
  "repository": {
    "type": "git",
    "url": "https://github.com/manufac-analytics/repeater"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/cjs/repeater.cjs",
  "module": "dist/esm/repeater.js",
  "types": "dist/esm/repeater.d.ts",
  "exports": {
    "import": "./dist/esm/repeater.js",
    "require": "./dist/cjs/repeater.cjs",
    "default": "./dist/esm/repeater.js",
    "types": "./dist/esm/repeater.d.ts"
  },
  "scripts": {
    "prebuild": "yarn run clean",
    "build": "tsc && tsc -p ./tsconfig.cjs.json && node ./scripts/rename",
